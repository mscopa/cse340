 <!-- The content heading -->
 <% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<!-- The login form display -->
<form action="" method="POST">
    <label for="account_email">Email:</label>
    <input type="email" name="account_email" placeholder="Email" required>
    <label for="account_password">Password:</label>
    <input type="password" name="account_password" placeholder="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
    <%- messages() %>
    <button type="submit">LOGIN</button>
    <p>No account? <a href="/account/registration">Sign-up</a></p>    
</form>