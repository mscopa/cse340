 <!-- The content heading -->
 <% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>
<form action="/account/register" method="post">
    <label for="account_firstname">First name</label>
    <input type="text" name="account_firstname" placeholder="First name" required>
    <label for="account_lastname">Last name</label>
    <input type="text" name="account_lastname" placeholder="Last name" required>
    <label for="account_email">Email address</label>
    <input type="email" name="account_email" placeholder="Email" required>
    <label for="account_password">Password</label>
    <input type="password" name="account_password" placeholder="Password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
    <button type="submit">Register</button>
</form>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <% }) %>
    </ul>
<% } %>